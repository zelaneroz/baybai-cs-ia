        MDBoxLayout:
            orientation:'vertical'
            spacing: 0.2
            MDTextField:
                hint_text: "username"
                mode: "round"
                max_text_length: 15
                id: uname

            MDTextField:
                hint_text: "Password"
                mode: "round"
                max_text_length: 15
                id: password
        MDRoundFlatButton:
            text: "Log in"
            on_press: root.try_login()

        MDTextButton:
            text: "Don't have an account? Register here"
            custom_color: "#F08DA9"
            size_hint: 1, .25
            halign: "center"
            pos_hint: {"center_x":0.5,"center_y":.5}
            on_press: root.signup_screen()

