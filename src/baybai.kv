ScreenManager:
    LearnScreen:
        name: "LearnScreen"
    Flashcards:
        name: "Flashcards"

    HomeScreen:
        name: "HomeScreen"
    TranslateScreen:
        name: "TranslateScreen"
    TestScreen:
        name: "TestScreen"
    StatsScreen:
        name: "StatsScreen"

<Flashcards>:
    MDBoxLayout:
        orientation:'vertical'
        md_bg_color:'grey'
        spacing:45

        #red1: about baybayin
        MDBoxLayout:
            md_bg_color:'purple'
            orientation:'horizontal'
            size_hint_y:0.12
            MDIconButton:
                icon:'arrow-left'
                on_release:root.backtohome()
            MDLabel:
                text:'About Baybayin'
                font_name:'Helvetica'
                bold:True
                style:'h1'
            MDCard:
                MDLabel:
                    text:'5/10'
                    font_name:'Helvetica'

        #red2: prompt or question
        MDBoxLayout:
            size_hint_y:0.16
            md_bg_color:'blue'
            MDLabel:
                text:'What does this character transcribe to?'
                font_name:'Helvetica'

        #red3: content + choices
        MDBoxLayout:
            size_hint_y:0.72
            md_bg_color:'purple'
            orientation:'vertical'
            spacing:77
            MDBoxLayout:
                size_hint:.81,.43
                pos_hint:{"center_x":0.5,"center_y":0.5}
                MDLabel:
                    md_bg_color:'pink'
                    text:'Content'
            MDBoxLayout:
                spacing:33
                orientation:'vertical'
                size_hint_x:.25
                MDBoxLayout:
                    orientation:'horizontal'
                    spacing:20
                    size_hint_y:61
                    #CHOICE 1 - CARD
                    MDCard:
                        size_hint_x:0.4
                        MDLabel:
                            text:'Choice 1'
                    MDCard:
                        size_hint_x:0.4
                        MDLabel:
                            text:'Choice 2'
                MDBoxLayout:
                    size_hint_y:61
                    orientation:'horizontal'
                    MDCard:
                        MDLabel:
                            text:'Choice 3'
                    MDCard:
                        MDLabel:
                            text:'Choice 4'
                    MDCard:
                        MDLabel:
                            text:'Choice 5'

<LearnScreen>:
    MDBoxLayout:
        orientation:'vertical'
        Image:
            source:'images/learn_bg.png'
            allow_stretch:True
            keep_ratio:True
        MDBoxLayout:
            md_bg_color:'pink'
            MDLabel:
                text:'Learn'
                font_name:'Helvetica'
                style:'h1'
        MDBoxLayout:
            md_bg_color:'purple'




