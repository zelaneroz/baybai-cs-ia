                md_bg_color: "#E536FF"
                pos_hint: {"center_x":0.5,"center_y":0.5}

            MDTextButton:
                text: "Don't have an account? [u][color=#A34CFF]Register here[/color][/u]"
                markup: True
                size_hint: 1, .25
                halign: "center"
