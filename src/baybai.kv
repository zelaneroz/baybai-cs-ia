<HomeScreen>:
    MDBoxLayout:
        orientation:'vertical'
        spacing: 61

        #red_1 (Upper half)
        MDBoxLayout:
            size_hint_y:258
            orientation:'vertical'
            #orange_1.1 (Logo + Daily Task)
            MDCard:
                size_hint_y:0.43
                Image:
                    size_hint_y:0.8
                    source:'images/logo.png'
                    pos_hint: {"center_x":0.5, "center_y":0.5}
            MDCard:
                md_bg_color: 'pink'
                size_hint:0.8,0.57 #147
                pos_hint:{"center_x":0.5,"center_y":0.5}
                MDLabel:
                    text: 'Daily Task'


        #red_2 (lower half)
        MDBoxLayout:
            size_hint_y:493
            orientation: 'vertical'
            spacing:53

            MDBoxLayout:#orange_2.1 (Functions)
                orientation:'vertical'
                size_hint_y:0.85 #419PX
                spacing: 14 #0.15
                #blue_2.1 (Learn, Test)
                MDBoxLayout: #231px
                    size_hint: 0.81,0.55
                    pos_hint:{"center_x":0.5,"center_y":0.5}
                    orientation:'horizontal'
                    spacing:20
                    MDCard: #LEARN
                        border_radius:20
                        radius:[14]
                        size_hint_x:0.38
                        on_release:root.home2learn()
                        Image:
                            source:'images/Learn.png'
                            allow_stretch:True
                            keep_ratio: True
                            size:self.parent.size

#                       MDLabel:
#                            text: 'Learn'
                    MDCard: #TEST
                        border_radius:20
                        size_hint_x:0.38
                        radius:[14]
                        on_release:root.home2test()
                        Image:
                            source:'images/Test.png'
                            allow_stretch:True
                            keep_ratio: True
                            size:self.parent.size
                #blue_2.2 (Translate)
                MDCard:
                    size_hint:0.81,0.3
                    pos_hint:{"center_x":0.5,"center_y":0.5}
                    on_release:root.home2translate()
                    MDBoxLayout:
                        Image:
                            source:'images/Translate.png'
                            allow_stretch:True
                            keep_ratio:True
                            size_hint:1,1

#                    MDLabel:
#                        text:'Translate'


            #orange_2.2 (NavBar)
            MDBottomNavigation:
                size_hint_y:0.15
                panel_color: 'green'

                MDBottomNavigationItem:
                    name: 'home'
                    text: 'Home'
#                    icon:'images/icon-home.png'
                    icon:'home'
                    size_hint_x:0.38
                    md_bg_color:'black'
                    BoxLayout:
                        orientation:'vertical'

                MDBottomNavigationItem:
                    name: 'stats'
                    text: 'Stats'
                    icon: 'images/icon-stats-off.png'
                    size_hint_x:0.38
                    on_tab_touch_down:root.home2stats()


