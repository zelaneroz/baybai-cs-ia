<SignUpScreen>:
    MDBoxLayout:
        orientation:'vertical'
        pos_hint: {"center_x":0.5, "center_y":0.5}
        size_hint: 0.7, 0.8
        MDLabel:
            text:'Sign up'
            font_name:'Helvetica'
            bold:True
            font_size:'50px'
            style:'h1'
        MDBoxLayout:
            orientation:'vertical'
            spacing: 0.2
            MDTextField:
                hint_text: "Name"
                mode: "round"
                max_text_length: 15
                id:name

            MDTextField:
                hint_text: "username"
                mode: "round"
                max_text_length: 15
                id:uname

            MDTextField:
                hint_text: "Password"
                mode: "round"
                max_text_length: 15
                id:password

            MDTextField:
                hint_text: "Confirm Password"
                mode: "round"
                max_text_length: 15
                id: confirm_password

            MDRoundFlatButton:
                text: "Sign in"
                on_press: root.try_register()

        MDTextButton:
            text: "Already have an account? Sign in here"
            custom_color: "#F08DA9"
            size_hint: 1, .25
            halign: "center"
            pos_hint: {"center_x":0.5,"center_y":.5}
            on_press: root.login_screen()



<LoginScreen>:
    MDBoxLayout:
        orientation:'vertical'
        pos_hint: {"center_x":0.5, "center_y":0.5}
        size_hint: 0.7, 0.8
        MDLabel:
