<CreatePostScreen>
    MDBoxLayout:
        orientation: 'vertical'
        #-----UPPER BAR-----
        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.10
#            md_bg_color: 'red'
            Image:
                source: 'src/images/logo_b.png'
#                opacity: 0.7
                size_hint: None, None  # This will disable the automatic sizing
                size: dp(220), dp(220)  # Set the size of the image
                allow_stretch: True  # Allow the image to be stretched
                pos_hint: {"center_y":0.5}
                size_hint_y: 0.7


        #-----CONTENT-----
        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, 0.8
            pos_hint: {'center_x':0.5,'center_y':0.5}
            spacing: 40
            padding: [0, 30, 20, 0] # Left, Top, Right, Bottom padding in dp or pixels

            MDCard:
                radius:0
                size_hint: 1.0, 0.5
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1  # Color of the border (black)
                    Line:
                        width: 2  # Width of the border line
                        rectangle: (self.x + 1, self.y + 1, self.width - 2, self.height - 2)
                MDBoxLayout:
                    orientation: 'vertical'

                    MDBoxLayout:
                        orientation: 'horizontal'
                        md_bg_color: '#F030C3'
                        MDIconButton:
                            icon: 'images/white-arrow-back.png'
                            on_release: root.backtofeed()
                        MDLabel:
                            text:"Create post"
                    MDBoxLayout:
                        orientation: 'vertical'

                        MDTextField:
                            hint_text: "Title"
                            mode: "round"
                            max_text_length: 15
                            id: post_title
                            font_name: "Helvetica"
                            size_hint_y: None
                            height: dp(48)

                        MDTextField:
                            hint_text: "Text (optional)"
                            mode: "round"
                            max_text_length: 300
                            id:post_content
                            size_hint_y: None
                            font_name: "Helvetica"
                            height: dp(48)

                    MDBoxLayout:
                        orientation: 'horizontal'
                        spacing: 20

                        MDRoundFlatButton:
                            text:'Cancel'
                            line_color: 'FF00CE'
                            text_color: "FF00CE"
                            on_release: root.backtofeed()
                        MDRoundFlatButton:
                            text:'Post'
                            md_bg_color: '#FF00CE'
                            text_color: "white"
                            line_color: 'FF00CE'
                            font_name: 'fonts/HelveticaNeue-01.ttf'
                            on_press: root.new_post()



